{
  "compilerOptions": {
    "target": "es5",
    "lib": ["es6", "dom", "es2016", "es2017"],
    "module": "esnext",
    "declaration": true,
    "outDir": "./dist/esm",
    "rootDir": "./src",
    "strict": true,
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "esModuleInterop": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": false,
    /* Advanced Options */
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true
  },
  "include": ["src/ABI/**/*.json", "src/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts", "**/*.mock.ts", "src/jest/**/*"]
}
